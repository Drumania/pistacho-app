{
  "name": "focuspit-app",
  "private": true,
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "dev_red": "npm run dev -- --host",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron main.js",
    "vite:build": "vite build",
    "pack": "electron-builder --dir",
    "dist": "npm run vite:build && electron-builder"
  },
  "build": {
    "appId": "com.focuspit.app",
    "productName": "FocusPit",
    "artifactName": "${productName}-v${version}-${os}.${ext}",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "mac": {
      "icon": "public/focuspit_icon.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "public/focuspit_icon.ico",
      "target": "nsis"
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "axios": "^1.10.0",
    "bootstrap": "^5.3.6",
    "bootstrap-icons": "^1.13.1",
    "chart.js": "^4.5.0",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.6.0",
    "firebase": "^11.9.1",
    "primeicons": "^7.0.0",
    "primereact": "^10.9.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-grid-layout": "^1.5.1",
    "react-resizable": "^3.0.5",
    "react-router-dom": "^7.6.2",
    "react-world-flags": "^1.6.0",
    "slugify": "^1.6.6",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^37.2.3",
    "electron-builder": "^24.14.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^1.0.1"
  }
}
